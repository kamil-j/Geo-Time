<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity StudyField.
    -->
    <changeSet id="20180417200933-1" author="jhipster">
        <createTable tableName="study_fields">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" />
            </column>

            <column name="short_name" type="varchar(10)">
                <constraints nullable="false" />
            </column>

            <column name="department_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

    <changeSet id="20180417200933-2" author="jhipster" context="dev">
        <loadData encoding="UTF-8"
                  file="config/liquibase/devDataload/studyFields.csv"
                  separator=";"
                  tableName="study_fields"/>
    </changeSet>

    <changeSet id="20180417200933-3" author="jhipster" context="prod">
        <loadData encoding="UTF-8"
                  file="config/liquibase/prodDataload/studyFields.csv"
                  separator=";"
                  tableName="study_fields"/>
    </changeSet>

    <changeSet id="20180417200933-4" author="jhipster" context="test">
        <loadData encoding="UTF-8"
                  file="config/liquibase/testDataload/studyFields.csv"
                  separator=";"
                  tableName="study_fields"/>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
